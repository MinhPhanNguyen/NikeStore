@model IEnumerable<NikeStore.Models.ProductCategory>

@{
	ViewData["Title"] = "Danh sách danh mục";
}

<div class="Dashboard">
	<div class="DashboardContent">
		<div class="ProductManager Manager" id="ProductManager">
			<div class="ContentManager">
				<section class="Section_1">
					<div class="Container">
						<h2>Danh sách danh mục</h2>
					</div>
				</section>

				<section class="Section_2">
					<div class="Container">
						<div class="LeftFilter">
							<a class="AddIcon" href="@Url.Action("Add", "Category", new { area = "Admin" })">
								<i class="fa-solid fa-plus"></i>
								<span>Thêm</span>
							</a>
						</div>
					</div>
				</section>

				<section class="Section_3">
					<div class="Container">
						<table id="myTable">
							<thead>
								<tr>
									<th>Chọn</th>
									<th>Ảnh</th>
									<th>Tên danh mục</th>
									<th>Mô tả danh mục</th>
									<th>Slug</th>
									<th>Sửa</th>
									<th>Xóa</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var category in Model)
								{
									<tr>
										<td><input type="checkbox"></td>
										<td><img src="/media/categories/@category.ImageUrl" alt="@category.CategoryName"></td>
										<td>@category.CategoryName</td>
										<td>@Html.Raw(category.Description)</td>
										<td>@category.Slug</td>
										<td><a asp-action="Edit" asp-controller="Category" asp-route-Id="@category.CategoryID"><i class="fa-solid fa-edit"></i></a></td>
										<td><a asp-action="Delete" asp-controller="Category" asp-route-Id="@category.CategoryID"><i class="fa-solid fa-trash"></i></a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</section>
			</div>
		</div>
	</div>
</div>