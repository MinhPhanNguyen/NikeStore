@model AppUserModel

@{
	ViewData["Title"] = "Quên mật khẩu";
}

<div class="LogInPage">
	<div class="Container">
		<form asp-action="SendMailForgotPass" asp-controller="Account" style="width: 600px!important;"> 
			<div asp-validation-summary="ModelOnly" class="Notification text-danger error"></div>
			<input type="hidden" name="token" value="@ViewBag.Token" />
			<div class="Contain_img">
				<img src="/images/icon/logo.png" alt="Alternate Text" />
			</div>

			<div class="Title">
				<h2>Vui lòng điền <strong>Email </strong>  của bạn để nhận mã cập nhật mật khẩu. Sau đó vui lòng vào Email để nhận mã</h2>
			</div>

			<div class='form-group ' style="padding: 0 1em;">
				<label for="Email">Email</label>
				<input asp-for="Email" type='text' class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<button class="btn btn-default">Gửi mail</button>
		</form>

		<a asp-action="LogIn" asp-controller="Account" class="btnRegister">Đăng nhập</a>
	</div>
</div>
