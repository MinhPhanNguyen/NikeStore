@model AppUserModel

@{
	ViewData["Title"] = "Cập nhật mật khẩu";
}

<div class="LogInPage">
	<div class="Container">
		<form asp-action="UpdateNewPassword" asp-controller="Account" style="width: 600px!important;">
			<div asp-validation-summary="ModelOnly" class="Notification text-danger error"></div>
			<input type="hidden" name="token" value="@ViewBag.Token"/>
			<div class="Contain_img">
				<img src="/images/icon/logo.png" alt="Alternate Text" />
			</div>

			<div class="Title">
				<h2>Vui lòng điền <strong>mật khẩu mới </strong> để cập nhật mật khẩu. Sau đó hãy đăng nhập lại bằng mật khẩu mới</h2>
			</div>

			<div class='form-group ' style="padding: 0 1em;">
				<label for="Email">Tên tài khoản</label>
				<input asp-for="Email" readonly value="@ViewBag.Email" type='text' class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class='form-group ' style="padding: 0 1em;">
				<label for="New Password">Mật khẩu mới</label>
				<input asp-for="PasswordHash" type='password' class="form-control" />
				<span asp-validation-for="PasswordHash" class="text-danger"></span>
			</div>

			<button class="btn btn-default">Gửi mail</button>
		</form>

		<a asp-action="LogIn" asp-controller="Account" class="btnRegister">Đăng nhập</a>
	</div>
</div>
